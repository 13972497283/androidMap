<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        style="@style/SmallTextTheme.BaseTextTheme"
        android:layout_centerVertical="true"
        android:textColor="@color/user_detail_title_color" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/arrow_right_icon2" />

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="@dimen/user_info_logon_small_size"
        android:layout_height="@dimen/user_info_logon_small_size"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding_size"
        android:layout_toLeftOf="@id/iv_arrow"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_subtitle"
        style="@style/LittleTextTheme.BaseTextTheme"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_size"
        android:layout_marginRight="@dimen/padding_size"
        android:layout_toStartOf="@id/iv_arrow"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/cb"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:button="@drawable/switch_selector"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_center"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />
</RelativeLayout>
